# rotate the logs!
# common settings
compress
compresscmd /bin/bzip2
compressoptions -9
compressext .bz2
 
dateext
dateformat -%Y-%m-%d-%s
 
rotate 192
nomail
missingok
create 640 www-data www-data
 
/var/log/nginx/*.log {
sharedscripts
postrotate
	test ! -f /var/run/nginx.pid || kill -USR1 `cat /var/run/nginx.pid`
 
/usr/bin/s3cmd --config=/root/.s3cfg sync /var/log/nginx/*.bz2 s3://<S3_LOGGING_BUCKET>
endscript
}